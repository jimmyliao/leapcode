{
  "name": "@jimmyliao/leapcode-monorepo",
  "version": "0.3.0-beta.1",
  "private": true,
  "description": "LeapCode Monorepo - Multi-AI coding CLI wrapper ecosystem",
  "author": "Jimmy Liao <jimmyliao@jimmyliao.net>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "publish:cli": "npm publish -w @jimmyliao/leapcode --access public",
    "publish:core": "npm publish -w @jimmyliao/leapcode-core --access public"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
